<%# app/views/quotes/index.html.erb %>

<%= turbo_stream_from "quotes" %>
<main class="container">
  <div class="header">
    <h1>Quotes</h1>
    <%= link_to "New quote",
                new_quote_path,
                { data: { turbo_frame: dom_id(Quote.new) },
                  class: "btn btn--primary" } %>
  </div>

  <%= turbo_frame_tag Quote.new %>
  <%= turbo_stream_from [current_company, "quotes"] do %>
    <%= render @quotes %>
  <% end %>
</main>